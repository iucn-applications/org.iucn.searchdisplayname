<?xml version="1.0"?>
<extension key="org.iucn.searchdisplayname" type="module">
  <file>searchdisplayname</file>
  <name>Search Display Name</name>
  <description>Allows to search for sort_name OR display_name when searching for the contact name. Works both in generic search as well as quick search.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Miguel Almeida (IUCN)</author>
    <email>supportportals@iucn.org</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">http://FIXME</url>
    <url desc="Documentation">http://FIXME</url>
    <url desc="Support">http://FIXME</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2021-11-09</releaseDate>
  <version>1.0</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.0</ver>
  </compatibility>
  <comments>Not extensively tested, so if you find issues/improvements, let us know.</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Searchdisplayname</namespace>
  </civix>
</extension>
